<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" android:padding="10dp">
            <gradient
                android:angle="90"
                android:endColor="#63000000"
                android:startColor="#1c000000"
                android:type="linear" />
            <padding
                android:bottom="4dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <item>
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
        <stroke android:color="#fff" android:width="2dp">

        </stroke>
        <solid
            android:color="#5093FF"/>

        <size
            android:width="120dp"
            android:height="120dp"/>
    </shape>
    </item>
</layer-list>